datasource db {
    provider = "postgresql"
    //N'ajoutez jamais url ici, sinon, le conteneur ne pourra pas se connecter à la base de données. L'url doit être défini dans le fichier .env
    //Même si votre IDE vous signale une erreur, ne vous inquiétez pas, cela est normal. Prisma lira l'url de la base de données à partir du fichier .env lors de l'exécution.
    //C'est dans prisma.config.ts que l'URL est défini (à partir de la version 7 de Prisma)
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id          Int      @id @default(autoincrement())
    email       String?  @unique
    phone       String?  @unique
    countryCode String?
    password    String?
    name        String?
    createdAt   DateTime @default(now())
}
